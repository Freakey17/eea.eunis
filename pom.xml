	<artifactId>eunis</artifactId>
	<packaging>war</packaging>

	<version>1.0-SNAPSHOT</version>
	<name>eunis</name>
	<url>http://maven.apache.org</url>

	<repositories>
		<repository>
			<id>project-local</id>
			<name>project-local repository</name>
			<layout>default</layout>
			<url>file:///${basedir}/3rdparty</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<inherited>true</inherited>
				<configuration>
					<verbose>false</verbose>
					<fork>false</fork>
					<compilerVersion>1.5</compilerVersion>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.7</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.3</version>
				<configuration></configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<id>create dirs</id>
						<phase>compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<mkdir dir="target/eunis/temp/cache" />
								<mkdir dir="target/eunis/temp/no-cache" />
								<mkdir dir="target/eunis/upload" />
								<mkdir dir="target/eunis/images/species" />
								<mkdir dir="target/eunis/images/habitats" />
								<mkdir dir="target/eunis/images/sites" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>deploy to Tomcat</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks if="webapp.root">
								<!-- At this point we have an exploded web-app in target/eunis  -->
								<echo message="Deploying to ${webapp.root}"/>
								<copy todir="${webapp.root}" includeEmptyDirs="true" overwrite="true">
									<fileset dir="target/eunis"/>
								</copy>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<!-- Define resource specific filtering -->
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>envSpecific/**/*</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>${basedir}/src/main/resources/envSpecific/${env}</directory>
				<filtering>true</filtering>
				<excludes>
					<exclude>required-head.jsp</exclude>
					<exclude>web.xml</exclude>
				</excludes>
			</resource>
			<!-- NOTE!!! this overwrites default web.xml, with ENV specific one -->
			<resource>
				<directory>${basedir}/src/main/resources/envSpecific/${env}</directory>
				<targetPath>${basedir}/target/eunis/WEB-INF/</targetPath>
				<includes>
					<include>web.xml</include>
				</includes>
			</resource>
			<!-- NOTE!!! this copies required-head.jsp to webapp folder -->
			<resource>
				<directory>${basedir}/src/main/resources/envSpecific/${env}</directory>
				<targetPath>${basedir}/target/eunis/</targetPath>
				<includes>
					<include>required-head.jsp</include>
				</includes>
			</resource>
		</resources>
		<finalName>eunis</finalName>
	</build>

